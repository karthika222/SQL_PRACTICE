# Write your MySQL query statement below
select  s.product_id, s.year as first_year, s.quantity, s.price from sales s 
join (select s1.product_id, min(s1.year) AS first_year, s1.quantity, s1.price 
 from sales s1 group by s1.product_id) s1
on 
s.product_id = s1.product_id 
AND s.year = s1.first_year;
